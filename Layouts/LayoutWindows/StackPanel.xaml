<Window x:Class="Layouts.LayoutWindows.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts.LayoutWindows"
        mc:Ignorable="d"
        Title="StackPanel" Height="150" Width="200" MinHeight="100" MinWidth="150">
    <StackPanel Orientation="Vertical">
        
        <StackPanel Orientation="Horizontal">
            <TextBlock MinWidth="100" Text="Feld 1"></TextBlock>
            <TextBox MinWidth="50"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock MinWidth="100" Text="Feld 2"></TextBlock>
            <TextBox MinWidth="50"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock MinWidth="100" Text="Feld 3"></TextBlock>
            <TextBox MinWidth="50"></TextBox>
        </StackPanel>

    </StackPanel>
</Window>
